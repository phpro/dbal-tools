{
    "name": "phpro/dbal-tools",
    "description": "Tools for working with DBAL in Symfony applications",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phpro\\DbalTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhproTest\\DbalTools\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Toon Verwerft",
            "email": "toon.verwerft@phpro.be"
        }
    ],
    "require": {
        "php": "~8.4.0",
        "azjezz/psl": "^3.2",
        "doctrine/dbal": "^4.2",
        "symfony/console": "^7.2",
        "symfony/dependency-injection": "^7.2",
        "symfony/http-kernel": "^7.2",
        "symfony/config": "^7.2",
        "symfony/validator": "^7.2",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/doctrine-bundle": "^2.14",
        "pagerfanta/core": "^4.7",
        "pagerfanta/doctrine-dbal-adapter": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1.3",
        "brianium/paratest": "^7.9.1",
        "vimeo/psalm": "^6.5.0",
        "psalm/plugin-symfony": "^5.2",
        "php-standard-library/psalm-plugin": "^2.3",
        "php-cs-fixer/shim": "^3.75",
        "phpro/grumphp-shim": "^2.12",
        "amphp/dns": "^2.4",
        "amphp/socket": "^2.3.1"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    }
}
